#include <iostream>
#include <cmath>
using namespace std;

int countEvenDigits(int n) {
    if (n == 0)
    return 0;
    int lastDigit = abs(n % 10);
    if (lastDigit % 2 == 0)
    return 1 + countEvenDigits(abs(n / 10));
    else
    return countEvenDigits(abs(n / 10));
}

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    cout<< countEvenDigits(n) << endl;

    return 0;
}

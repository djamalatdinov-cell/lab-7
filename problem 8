#include <iostream>
#include <cmath>
using namespace std;

bool isIncreasing(int n) {
    n = abs(n);
    if (n < 10)
    return true;

    int lastDigit = n % 10;
    int secondLastDigit = (n / 10) % 10;

    if (secondLastDigit >= lastDigit)
    return false;
    return isIncreasing(n / 10);
}

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    if (isIncreasing(n))
    cout << n << " has strictly increasing digits." << endl;
    else
    cout << n << " does NOT have strictly increasing digits." << endl;
    return 0;
}
